<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.rio4special.app.Login" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp" >

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurante"
            android:id="@+id/checkCategoria1"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bar"
            android:id="@+id/checkCategoria2"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CafÃ©"
            android:id="@+id/checkCategoria3"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supermercado"
            android:id="@+id/checkCategoria4"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aeroporto"
            android:id="@+id/checkCategoria5"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:id="@+id/checkCategoria6"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banco"
            android:id="@+id/checkCategoria7"
            android:layout_gravity="left|center_horizontal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universidade"
            android:id="@+id/checkCategoria8"
            android:layout_gravity="left|center_horizontal" />

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="8">

            <Button
                android:id="@+id/btnVoltar"
                style="@style/btn_white_large"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Voltar" />

            <Button
                android:id="@+id/btnPesquisar"
                style="@style/btn_white_large"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Pesquisar"
                android:layout_marginLeft="@dimen/pad_10dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>